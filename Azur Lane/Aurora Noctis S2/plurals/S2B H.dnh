#TouhouDanmakufu[Plural]
#ScriptVersion[3]
#Title["AL Aurora Noctis Stage 2 Boss - Hard"]
#Text["Eagle (6)"]
#Background["script/default_system/Default_Background_IceMountain.txt"]
#BGM["../music/Surrounding.ogg"]

let dir = GetCurrentScriptDirectory();

@Event{
}

@Initialize{
	SetPauseScriptPath(GetCurrentScriptDirectory() ~ "../../system/Pause.dnh");
  SetEndSceneScriptPath(GetCurrentScriptDirectory() ~ "../../system/EndScene.dnh");
  SetReplaySaveSceneScriptPath(GetCurrentScriptDirectory() ~ "../../system/ReplaySaveScene.dnh");
	
	TPlural;
}

@MainLoop{
	yield;
}

@Finalize{
	//RemoveSound(BGM);
}

task TPlural {
	let obj = ObjEnemyBossScene_Create();
	
	ObjEnemyBossScene_Add(obj, 0, dir ~ "../singles/Eagle Nonspell 1 - Hard.dnh");
	ObjEnemyBossScene_Add(obj, 0, dir ~ "../singles/Eagle Spellcard 1 - Hard.dnh");
	ObjEnemyBossScene_Add(obj, 1, dir ~ "../singles/Eagle Nonspell 2 - Hard.dnh");
	ObjEnemyBossScene_Add(obj, 1, dir ~ "../singles/Eagle Spellcard 2 - Hard.dnh");
	ObjEnemyBossScene_Add(obj, 2, dir ~ "../singles/Eagle Spellcard 3 - Hard.dnh");
	
	ObjEnemyBossScene_LoadInThread(obj);
	ObjEnemyBossScene_Regist(obj);
	//music(obj);
	
	while(!Obj_IsDeleted(obj)) {
		yield;
	}
	
	CloseScript(GetOwnScriptID());
}

